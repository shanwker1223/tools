{
  "name": "tools-node",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tools/node/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/tools/node",
        "tsConfig": "packages/tools/node/tsconfig.lib.json",
        "packageJson": "packages/tools/node/package.json",
        "main": "packages/tools/node/src/index.ts",
        "assets": ["packages/tools/node/*.md"],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/tools/node/**/*.ts"]
      }
    },
    "test-report": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/tools/node/jest.config.ts",
        "passWithNoTests": true,
        "json": true,
        "outputFile": "report-tools-node.json"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/tools/node/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "changelog": true,
        "npm": true,
        "tagFormat": "tools-node-v${VERSION}",
        "repositoryUrl": "https://github.com/shanwker1223/tools",
        "buildTarget": "tools-node:build",
        "outputPath": "dist/packages/tools/node"
      }
    }
  },
  "tags": ["node"]
}

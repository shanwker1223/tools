{
  "name": "tools-node-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tools/node-api/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/tools/node-api",
        "tsConfig": "packages/tools/node-api/tsconfig.lib.json",
        "packageJson": "packages/tools/node-api/package.json",
        "main": "packages/tools/node-api/src/index.ts",
        "assets": ["packages/tools/node-api/*.md"],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/tools/node-api/**/*.ts"]
      }
    },
    "test-report": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/tools/node-api/jest.config.ts",
        "passWithNoTests": true,
        "json": true,
        "outputFile": "report-tools-node-api.json"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/tools/node-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "changelog": true,
        "npm": true,
        "tagFormat": "tools-node-api-v${VERSION}",
        "repositoryUrl": "https://github.com/shanwker1223/tools",
        "buildTarget": "tools-node-api:build",
        "outputPath": "dist/packages/tools/node-api"
      }
    }
  },
  "tags": []
}

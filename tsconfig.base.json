{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shanwker/nx-cdk-tools": ["packages/tools/cdk/src/index.ts"],
      "@shanwker/nx-node-api-tools": ["packages/tools/node-api/src/index.ts"],
      "@shanwker/nx-node-tools": ["packages/tools/node/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
